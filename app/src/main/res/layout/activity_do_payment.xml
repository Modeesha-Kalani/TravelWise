<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/activity_toolbar"></include>



    <TextView
        android:id="@+id/textView2"
        android:layout_width="149dp"
        android:layout_height="31dp"
        android:text="Payment"
        android:textColor="#292C2C"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.155" />

    <EditText
        android:id="@+id/accno"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="16dp"
        android:background="#70A7DFDF"
        android:ems="10"
        android:hint="Account Number"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#0E0E0E"
        android:textColorHint="#6E6363"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/startpoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/acname"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="16dp"
        android:background="#70A7DFDF"
        android:ems="10"
        android:hint="Name"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#0E0E0E"
        android:textColorHint="#6E6363"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/startpoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bank"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="16dp"
        android:background="#70A7DFDF"
        android:ems="10"
        android:hint="Bank"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#0E0E0E"
        android:textColorHint="#6E6363"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/startpoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="16dp"
        android:background="#70A7DFDF"
        android:ems="10"
        android:hint="Amount to be Pay"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#0E0E0E"
        android:textColorHint="#6E6363"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/startpoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bank2"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="16dp"
        android:background="#70A7DFDF"
        android:ems="10"
        android:hint="CSV"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#0E0E0E"
        android:textColorHint="#6E6363"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/startpoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/exdate"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="412dp"
        android:layout_marginEnd="16dp"
        android:background="#70A7DFDF"
        android:ems="10"
        android:hint="Expire Date      MM/YY"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#0E0E0E"
        android:textColorHint="#6E6363"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/startpoint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pay"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/teal_700"
        android:text="Pay"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.818" />

    <androidx.cardview.widget.CardView
        android:layout_width="265dp"
        android:layout_height="36dp"
        android:foregroundTint="#009688"
        app:cardBackgroundColor="#E6E8E7"
        app:layout_constraintBottom_toTopOf="@+id/acname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.384">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Available Amount: 5000"
            android:textColor="#171616"
            android:textSize="24sp"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>